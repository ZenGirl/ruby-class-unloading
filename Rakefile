require 'bundler/gem_tasks'

require 'rspec/core/rake_task'

Bundler.setup

# ---------------------------------------------------------------------------
# Note that for this example, we're not loading these:
# ---------------------------------------------------------------------------
#Bundler::GemHelper.install_tasks

# ---------------------------------------------------------------------------
# Create the new task
# ---------------------------------------------------------------------------
RSpec::Core::RakeTask.new(:spec)

# ---------------------------------------------------------------------------
# And default it
# ---------------------------------------------------------------------------
desc 'Run Specs'
task :default => :spec

